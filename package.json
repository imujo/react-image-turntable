{
  "name": "root",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nerdyman/react-image-turntable.git"
  },
  "license": "MIT",
  "packageManager": "pnpm@9.10.0",
  "scripts": {
    "bootstrap": "npm run bootstrap:project && yarn bootstrap:playwright",
    "bootstrap:project": "corepack enable && pnpm i --frozen-lockfile",
    "bootstrap:playwright": "yarn exec playwright install chromium",
    "clean": "rm -rf ./coverage ./dist ./.nyc_output ././{.,lib,example}.*.log ./{.,lib,example}/node_modules"
  },
  "lint-staged": {
    "**/*.{js,jsx,mjs,mts,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "resolutions": {
    "react-image-turntable": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^22.5.5",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "eslint": "^8.53.0",
    "eslint-plugin-react": "^7.36.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "typescript": "^5.6.2"
  }
}
